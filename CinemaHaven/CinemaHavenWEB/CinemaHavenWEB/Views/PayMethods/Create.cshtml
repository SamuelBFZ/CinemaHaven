@model CinemaHaven.DAL.Entities.PaymentMethod

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://fonts.googleapis.com/css?family=Josefin Sans' rel='stylesheet'>
    <title>Payment Form</title>
    <style>
        body {
            font-family: 'Josefin Sans';
            background-color: #d9d9d9;
        }

        .container {
            width: 800px;
            margin: 0 auto;
            padding: 0px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #ffffff;
        }

        h1 {
            text-align: center;
            margin-bottom: 0px;
            margin-top: 40px;
            font-size: 4.3em;

        }

        .payment-details {
            border: 1px solid #ffffff;
            padding: 15px;
            margin-bottom: 20px;
            background-color: #ffffff;
        }

        .inline-group {
            display: flex;
            gap: 200px;
        }

        .input-group {
            display: flex;
            flex-direction: column;
        }

        label {
            display: block;
            margin-top: 10px;
            font-size: 1.2em;
        }

        input {
            width: 100%;
            padding: 8px;
            border: 1px solid #000;
            border-radius: 3px;
            box-sizing: border-box;
            background-color: #d9d9d9;
        }

        .buttons {
            text-align: right;
            margin-bottom: 50px;
            margin-right: 20px;
            font-size: 1.2em;
        }

        button {
            padding: 10px 20px;
            background-color: #d9d9d9;
            color: #000;
            border: 1px solid #000;
            border-radius: 3px;
            cursor: pointer;
        }

        button:hover {
            background-color: #bfbfbf;
        }

        button[type="reset"] {
            background-color: #d9d9d9;
            color: #000;
        }

        button[type="reset"]:hover {
            background-color: #bfbfbf;
        }
    </style>
</head>
<body>
    <div class="container">
        <form action="#">
            <h1>METODO DE PAGO</h1>
            <div class="payment-details">
                <label for="cardNumber">Numero de tarjeta:</label>
                <input type="text" id="cardNumber" name="CardNumber" required>

                <div class="inline-group">
                    <div class="input-group">
                        <label for="expiryDate">Caducidad (MM/YY):</label>
                        <input type="text" id="expiryDate" name="ExpirationDate" placeholder="MM/YY" required>
                    </div>
                    <div class="input-group">
                        <label for="cvv">CVV:</label>
                        <input type="text" id="cvv" name="SecurityCode" required>
                    </div>
                </div>

                <label for="holderName">Titular:</label>
                <input type="text" id="holderName" name="CardHolderName" required>

                <label for="address">Direccion:</label>
                <input type="text" id="address" name="Address" required>

                <label for="postalCode">Codigo postal:</label>
                <input type="text" id="postalCode" name="PostalCode" required>
            </div>

            <div class="buttons">
                <button type="submit">Guardar</button>
                <button type="reset">Regresar</button>
            </div>
        </form>
    </div>
</body>
</html>

